{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "preserve",
        "module": "es2022",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist", "client"]
}
